<%= turbo_frame_tag "exercise_modal" do %>

    <div class="modal fade" id="shareRecipeModal" tabindex="-1" aria-labelledby="newExerciseModalLabel" aria-hidden="true" data-controller="exercise-modal" data-action="turbo:before-render@document->exercise-modal#hideBeforeRender">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" id="modal_content">
                <div class="modal-header">
                    <h4 class="modal-title" id="newExerciseModalLabel"><%= title %></h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body exercise_modal_body" id="exercise_modal_body">
                    <%= yield %>
                </div>
            </div>
        </div>
    </div>

<% end %>