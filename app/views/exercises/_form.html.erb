<%= form_with(model: exercise) do |form| %>
    <% if exercise.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

        <ul>
            <% exercise.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field form-group">
        <%= form.label :name %>
        <%= form.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="field form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
    </div>
    <br/>
    <div class="field form-group">
        <%= form.label :visibility %>
        <%= form.select :visibility, options_for_select(Exercise.visibilities.map {|key, value| [key.titleize, Exercise.visibilities.key(value)]}, @exercise.visibility), class: "form-control" %>
    </div>
    <br/>
    <div class="field form-group">
        <%= form.label :exercise_type %>
        <%= form.select :exercise_type, options_for_select(Exercise.exercise_types.map {|key, value| [key.titleize, Exercise.exercise_types.key(value)]}, @exercise.exercise_type), class: "form-control" %>
    </div>
    <br/>
    <div>
        <%= form.submit class:"btn btn-success" %>
    </div>
<% end %>
